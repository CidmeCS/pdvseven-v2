<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:a7D.PDV.SaidaComanda.UI">

    <SolidColorBrush x:Key="colorNormal" Color="#5381ac" />
    <SolidColorBrush x:Key="colorNormalOver" Color="#73a1cc" />
    <SolidColorBrush x:Key="colorEnter" Color="#8CA83F" />
    <SolidColorBrush x:Key="colorCancel" Color="#FF7777" />

    <Style TargetType="Button">
        <Setter Property="Background" Value="#5381ac"/>
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="MinHeight" Value="50" />
        <Setter Property="MinWidth" Value="70" />
        <Setter Property="FontFamily" Value="Verdana" />
        <Setter Property="BorderBrush" Value="White" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style x:Key="ZommOut" TargetType="local:TecladoBox">
        <Style.Resources>
            <Storyboard x:Key="TimeLina1">
                <DoubleAnimation Storyboard.TargetProperty="ScaleTransform.ScaleX" From="1" To="0" Duration="0:0:1" />
                <DoubleAnimation Storyboard.TargetProperty="ScaleTransform.ScaleY" From="1" To="0" Duration="0:0:1" />
            </Storyboard>
        </Style.Resources>
    </Style>

</ResourceDictionary>