<Window x:Class="a7D.PDV.AutoAtendimento.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Autoatendimento"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid PreviewMouseDown="Grid_MouseDown">
        <Grid.Background>
            <ImageBrush ImageSource="pdv7.png"  Stretch="Uniform" TileMode="Tile"/>
        </Grid.Background>
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
        <TextBlock VerticalAlignment="Bottom" Padding="5" HorizontalAlignment="Right" TextAlignment="Right" Panel.ZIndex="1" Foreground="Black" Name="loading" MouseDown="loading_MouseDown">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="2" Direction="330" Color="White" Opacity = "1" BlurRadius="3"/>
            </TextBlock.Effect>    
            Carregando....
        </TextBlock>
    </Grid>
</Window>
