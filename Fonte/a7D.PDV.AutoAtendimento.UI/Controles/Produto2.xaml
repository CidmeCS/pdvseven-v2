<UserControl x:Class="a7D.PDV.AutoAtendimento.UI.Controles.Produto2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:a7D.PDV.AutoAtendimento.UI.Controles"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200">
    <Grid Name="Produto1GridItem" Loaded="Item_Loaded" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Image Name="Foto" VerticalAlignment="Top" Grid.Row="0" />
        <StackPanel Name="Produto" Orientation="Vertical" Grid.Row="1">
            <TextBlock Name="Nome" Text="Nome" />
            <TextBlock Name="Decricao" Text="Descricao" />
        </StackPanel>
        <TextBlock x:Name="Preco" Grid.Row="2" Text="R$ 123,45" />
    </Grid>
</UserControl>
