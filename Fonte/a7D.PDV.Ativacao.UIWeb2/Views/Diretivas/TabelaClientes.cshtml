<div class="table-responsive" ng-controller="ClientesController">
    <div class="row">
        <div class="col-lg-6">
            <div class="input-group">
                <span class="input-group-btn">
                    <a type="button" class="btn btn-primary" href="#/clientes/new"><span class="glyphicon glyphicon-plus"></span>&nbsp;Cliente</a>
                </span>
                <input type="search" class="form-control" placeholder="Busque aqui..." ng-model="busca" />
            </div>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th></th>
                <th>Revenda</th>
                <th>Cliente</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-hide="carregado">
                <td></td>
                <td colspan="3">
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                            Carregando...
                        </div>
                    </div>
                </td>
            </tr>
            <tr ng-show="erro && carregado">
                <td colspan="3">
                    <div class="alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <strong>Erro!</strong> {{mensagem}}
                    </div>
                </td>
            </tr>
            <tr ng-repeat="cliente in clientes | filter:busca">
                <td>
                    <a ng-href="/#/clientes/edit/{{cliente.IDCliente}}" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-pencil"></span></a>
                </td>
                <td>{{cliente.Revenda.Nome}}</td>
                <td>{{cliente.Nome}}</td>
            </tr>
        </tbody>
    </table>
</div>
